<div class='container-solicitar-donacion container'>
    <div class ="title">
        <h1>Solicitar Donacion</h1>
    </div>

    <form action="" class='form-datos-solicitante'>
        <fieldset class='fieldset-datos-solicitante container'>
            <legend>Datos  Solicitante</legend>
            <div class='container_datos'>
                <label for="nombre">Cual es tu nombre?</label>
                <input type="text" name="nombre" id="nombre" autocomplete="name" placeHolder='Ingrese nombre'>    
            </div>
            
            <div class='container_datos'>
                <label for="cedula">Cedula</label>
                <input type="number" name="cedula" id="cedula" required autocomplete="cedula" placeHolder='Ingrese Cedula'>
            </div>
            
            <div class='container_datos'>
                <label for="nombre">Correo</label>
                <input type="text" name="correo" id="nombre" autocomplete="name" placeHolder='Ingrese correo'>    
            </div>
            
        </fieldset>
    

    <div class ="title">
        <h2>productos</h2>
        <p>
        Nota: Solo puede solicitar un item por categoria
        </p>
    </div>
    <section  class="solicitud__donacion-container--slider container ">
            <article class="solicitud__donacion-container--card">
                <div id="tanque" class='img-producto'></div>
                <div class='container-donacion--number'>
                    <p>Tanque Oxigeno</p>    
                    <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-tanque" class='button'value='Solicitar'>
                        <fieldset>
                </div>
            </article>

            <article class="solicitud__donacion-container--card">
                <div id="mascarilla" class='img-producto'></div>
                <div class='container-donacion--number'>
                    <p>Mascarilla</p>    

                        <fieldset class='datos-cantidad-donar'>
                             <input type="submit" name="Donar" id="btn-mascarilla" class='button'value='Solicitar'>
                        <fieldset>
                  
                </div>
                        
            </article>  

            <article class="solicitud__donacion-container--card">
                <div id="guantes" class='img-producto'></div>
                <div class='container-donacion--number'>
                <p>Guantes</p>    

                        <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-guantes" class='button'value='Solicitar'>
                        <fieldset>
                    
                </div>
                        
            </article>
                        
            <article class="solicitud__donacion-container--card">
                <div id="mascara" class='img-producto'></div>
                <div class='container-donacion--number'>
                <p>Mascara</p>    
                    
                        <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-mascara" class='button'value='Solicitar'>
                        <fieldset>
                   
                </div>
                        
            </article>
                        
            <article class="solicitud__donacion-container--card">
                <div id="alcohol" class='img-producto'></div>
                <div class='container-donacion--number'>
                <p>Alcohol</p>    
                    
                        <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-alcohol" class='button'value='Solicitar'>
                        <fieldset>
                    
                </div>
                        
            </article>
                        
            <article class="solicitud__donacion-container--card">
                <div id="silla" class='img-producto'></div>
                <div class='container-donacion--number'>
                <p>Silla</p>    
                    
                        <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-silla" class='button'value='Solicitar'>
                        <fieldset>
                    
                </div>
                        
            </article>
                        
            <article class="solicitud__donacion-container--card">
                <div id="muletas" class='img-producto'></div>
                <div class='container-donacion--number'>
                <p>muletas</p>    
                    
                        <fieldset class='datos-cantidad-donar'>
                            <input type="submit" name="Donar" id="btn-muletas" class='button'value='Solicitar'>
                        <fieldset>               
                </div>                 
            </article>

            <%# card extraida con get %>
                <% @supplys.each do |resp| %>
                    <article class="donacion-container--card">
                    <div id="producto_sin_foto" class='img-producto'></div>
                    <div class='container-donacion--number'>
                        <p><%= resp["name"] %></p>
                        <fieldset class='datos-cantidad-donar'>
    
                            <input type="submit" name="solicitar" id="btn-muletas" class='button'value='Solicitar'>
                        <fieldset>                 
                    </div>
                            
                </article>
            <% end%>


        </section>
    </form>
                        
        
</div>